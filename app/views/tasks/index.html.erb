<h2>Tasks</h2>

<%= link_to('Add new Task', { action: 'new' }) %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Task</th>
      <th>Project</th>
      <th>Hours</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.project.name %></td>
        <td><%= task.hour %></td>
        <td><%= link_to('Show', { action: 'show', id: task.id }) %></td>
        <td><%= link_to('Edit', { action: 'edit', id: task.id }) %></td>
        <td><%= link_to('Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %> 
  </tbody>
</table>