<div class="container">
<%= form_for(task) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :project_id %>
    <%= f.text_field :project_id %>
  </div>
  <div class="field">
    <%= f.label :hour %>
    <%= f.text_field :hour %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>