<div class='row'>
  <div class='col-sm-9'></div>
  <div class='col-sm-3'>
    <div class='row'>Download project wise timesheet</div>
    <div class='row'>
      <%= form_tag(excel_sheet_projects_path(format: "xlsx"), :method => 'get', :class => 'navbar-form navbar-right') do %>
        <div class="form-group">
          <%= select_tag :id, options_from_collection_for_select(current_user.projects, "id", "name"), :class => 'form-control' %>
        </div>
        <%= submit_tag 'Download', :class => 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
              
<% if @tasks.present? %>
  <% i = 0 %>
  <% @tasks.each do |task| %>
    <% if i == 0 %>
      <div class='row'>
    <% end%>
    <div class='col-sm-3'>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= task.project.name %></h3>
        </div>
        <div class="panel-body">
          <div class='row'>
            <div class='col-sm-8'><%= task.name %></div>
            <div class='col-sm-4'><%= "#{task.hour} Hours" %></div>
          </div>
          
        </div>
      </div>  
    </div>
    <% i += 1 %>
    <% if i == 0 %>
      <% i = 0 %>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div class="alert alert-info fade in">
    No tasks
  </div>
<% end %>