<div class='row'>
  <div class='col-sm-4 col-sm-offset-4'>
    <div class='col-sm-offset-1'><h2>Forgot your password?</h2></div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :class => 'navbar-form navbar-left') do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", :class => 'btn btn-default' %>
      </div>
    <% end %>

  </div>
</div>
